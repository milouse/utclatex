\mode<presentation>

%%%
% Colors !
%%%

\definecolor{orange}{RGB}{250,108,0}
\definecolor{darkgreen}{RGB}{155,187,89}
\definecolor{lightgreen}{RGB}{239,243,234}
\definecolor{atosred}{RGB}{204,0,0}
\definecolor{tatoebagreen}{RGB}{100,155,61}
\definecolor{charcoal}{RGB}{28,28,28}
\definecolor{marron}{RGB}{105,13,13}
\definecolor{ivoire}{rgb}{1,0.95,0.86}

\definecolor{utcyellow}{RGB}{255,212,17}
\definecolor{utcgray}{RGB}{114,114,123}
\definecolor{utcrose}{RGB}{251,3,0}

\setbeamercolor{structure}{fg=utcrose, bg=utcgray}
\setbeamercolor{inverted structure}{fg=utcgray, bg=utcyellow}
\setbeamercolor{normal text}{fg=charcoal}
\setbeamercolor{alerted text}{fg=atosred}
\setbeamercolor{example text}{fg=tatoebagreen}

\setbeamercolor{section in head/foot}{use=inverted structure}
\setbeamercolor{page number in head/foot}{fg=inverted structure}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

% Blocks
\setbeamercolor{block title}{use=normal text, fg=utcgray, bg=utcyellow}
\setbeamercolor{block title alerted}{use=alerted text, fg=white, bg=alerted text.fg!75!bg}
\setbeamercolor{block title example}{use=example text, fg=white, bg=example text.fg!75!bg}
\setbeamercolor{block title simple}{use=normal text, fg=utcgray, bg=ivoire}
\setbeamercolor{block body}{parent=normal text, bg=utcyellow!20}
\setbeamercolor{block body alerted}{parent=alerted text, bg=alerted text.fg!20!bg}
\setbeamercolor{block body example}{parent=example text, bg=example text.fg!20!bg}
\setbeamercolor{block body simple}{parent=normal text, bg=ivoire}

\mode<all>
